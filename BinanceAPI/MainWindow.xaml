<Window
    
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinanceAPI"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="BinanceAPI.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,0,-107,-76" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="557*"/>
            <ColumnDefinition Width="350*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Start" Content="Старт" HorizontalAlignment="Left" Margin="291,333,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="Add" Content="Добавить" HorizontalAlignment="Left" Margin="10,333,0,0" VerticalAlignment="Top" Click="Add_Click"/>
        <Button x:Name="Stop" Content="Стоп" HorizontalAlignment="Left" Margin="368,333,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        
        <ComboBox x:Name="cbPair" HorizontalAlignment="Left" Margin="101,333,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="413,233,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Таймер обновления" HorizontalAlignment="Left" Margin="479,333,0,0" VerticalAlignment="Top" IsEnabled="False" Foreground="#FF120000" Grid.ColumnSpan="2"/>

        <dxe:TextEdit x:Name="ttime" HorizontalAlignment="Left" Margin="38,333,0,0" VerticalAlignment="Top" Width="35" Grid.Column="1" EditValue="10"/>
        <DataGrid x:Name="Table" Margin="10,10,277,198" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
