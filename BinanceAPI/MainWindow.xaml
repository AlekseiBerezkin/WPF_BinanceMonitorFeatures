<Window
    
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinanceAPI"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="BinanceAPI.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="342" Width="783" Loaded="Window_Loaded">
    <Grid HorizontalAlignment="Center" Width="769" Height="450" VerticalAlignment="Top" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="557*"/>
            <ColumnDefinition Width="350*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Start" Content="Старт" HorizontalAlignment="Left" Margin="301,88,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="Add" Content="Добавить" HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top" Click="Add_Click"/>
        <Button x:Name="Stop" Content="Стоп" HorizontalAlignment="Left" Margin="378,88,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

        <ComboBox x:Name="cbPair" HorizontalAlignment="Left" Margin="318,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="413,233,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Таймер обновления" HorizontalAlignment="Left" Margin="217,140,0,0" VerticalAlignment="Top" IsEnabled="False" Foreground="#FF120000"/>

        <dxe:TextEdit x:Name="ttime" HorizontalAlignment="Left" Margin="338,140,0,0" VerticalAlignment="Top" Width="35" EditValue="10"/>
        <DataGrid x:Name="Table" ItemsSource="{Binding }"  AutoGenerateColumns="False" Margin="10,10,0,136" HorizontalAlignment="Left" Width="212">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding symbol}"/>
                <DataGridTextColumn Header="%" Binding="{Binding priceChangePercent}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnChangePeriod" Content="Изменить" HorizontalAlignment="Left" Margin="378,140,0,0" VerticalAlignment="Top" Click="btnChangePeriod_Click"/>
        <Button x:Name="btndelete" Content="Удалить" HorizontalAlignment="Left" Margin="227,37,0,0" VerticalAlignment="Top" Click="btndelete_Click"/>
        <ComboBox x:Name="cbdelete" HorizontalAlignment="Left" Margin="318,37,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
